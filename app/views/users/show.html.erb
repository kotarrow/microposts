<%# 個別ユーザ表示画面 %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    
    <table class="table" style="font-size: medium">
      <%#= binding.pry %>
      <tr>
        <th>follow</th>
        <th>follower</th>
      </tr>
      <tr>
        <td><%= link_to @user.following_users.count, followings_user_path %></td>
        <td><%= link_to @user.follower_users.count, followers_user_path %></td>
      </tr>
    </table>
    
  </aside>
  
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    
    <% if @user.microposts.any? %>　<!-- @user.micropostsに投稿があればtrueを返すﾒｿｯﾄﾞ-->
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>